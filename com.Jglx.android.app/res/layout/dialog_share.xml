<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_line_top_bottom"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/all_magrin"
            android:text="分享到"
            android:textSize="@dimen/text_textSize_big" />

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/all_magrin"
            android:paddingTop="20dp" >

            <RelativeLayout
                android:id="@+id/dialog_share_QQLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/share_qq"
                    android:gravity="center"
                    android:text="QQ好友" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_share_firendLineLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/share_firendline"
                    android:gravity="center"
                    android:text="朋友圈" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_share_weiboLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/share_weibo"
                    android:gravity="center"
                    android:text="微博" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/all_magrin"
        android:paddingTop="20dp" >

        <RelativeLayout
            android:id="@+id/dialog_share_WxfirendLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/weixin"
                android:gravity="center"
                android:text="微信好友" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_share_QZoneLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/qzonej"
                android:gravity="center"
                android:text="QQ空间" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_share_cancelTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@drawable/bg_line_top_bottom"
        android:gravity="center"
        android:text="取消"
        android:textSize="@dimen/text_textSize_big" />

</LinearLayout>