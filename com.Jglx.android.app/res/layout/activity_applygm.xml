<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_line_top_bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="@dimen/all_magrin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="联系电话"
                android:textSize="@dimen/text_textSize" />

            <EditText
                android:id="@+id/appGM_phoneEdt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_magrin"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请填写您的电话号码"
                android:inputType="number"
                android:textSize="@dimen/text_textSize" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/all_magrin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="@dimen/all_magrin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="QQ号码"
                android:textSize="@dimen/text_textSize" />

            <EditText
                android:id="@+id/appGM_QQEdt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_magrin"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入您的QQ号码"
                android:inputType="number"
                android:textSize="@dimen/text_textSize" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/appGM_detailEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@drawable/bg_line_top_bottom"
        android:gravity="left|top"
        android:hint="请填写您的申请说明"
        android:minHeight="140dp"
        android:padding="@dimen/all_padding"
        android:textSize="@dimen/text_textSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="您的申请我们会立刻审核请耐心等待"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize_small" />

</LinearLayout>