<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_coner"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:gravity="center"
        android:padding="@dimen/all_magrin"
        android:text="确定重发该条消息?"
        android:textSize="@dimen/text_textSize_big" />

    <Button
        android:id="@+id/dialog_alert_okBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_marginRight="@dimen/all_magrin"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_textSize" />

    <Button
        android:id="@+id/dialog_alert_cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginBottom="@dimen/all_magrin"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_marginRight="@dimen/all_magrin"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_stroke_gray_corner"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize" />

</LinearLayout>