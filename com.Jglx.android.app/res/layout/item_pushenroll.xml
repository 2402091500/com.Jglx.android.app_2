<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/all_padding" >

        <com.example.com.jglx.android.app.view.CircleImageView
            android:id="@+id/item_pushenroll_iconIv"
            android:layout_width="@dimen/icon_height_width_middle"
            android:layout_height="@dimen/icon_height_width_middle"
            android:layout_centerVertical="true"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_pushenroll_iconIv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_pushenroll_titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="10"
                android:singleLine="true"
                android:text="邻信活动"
                android:textSize="@dimen/text_textSize_big" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/all_magrin"
                android:text="您已成功报名 "
                android:textColor="@color/graytext"
                android:textSize="@dimen/text_textSize_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_pushenroll_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/all_magrin"
            android:text="上午 10:00"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_small" />

        <ImageView
            android:id="@+id/item_pushenroll_deleteIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/item_pushenroll_timeTv"
            android:layout_centerVertical="true"
            android:src="@drawable/city_select"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp" />

</RelativeLayout>