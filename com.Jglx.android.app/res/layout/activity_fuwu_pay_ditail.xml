<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.jglx.android.app.ui.Fuwu_pay_ditail"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:textColor="@color/graytext"
            android:textSize="16sp"
            android:text="订单信息"/>
        <TextView 
            android:id="@+id/order_ditail"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:textColor="@color/graytext"
            android:textSize="14dp"
            android:layout_weight="7"
            android:text="18725773513"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:textColor="@color/graytext"
            android:textSize="16sp"
            android:text="付款方式"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:layout_weight="7"
            android:text="支付宝             "
            android:gravity="left"
            android:drawableRight="@drawable/pay_vv"
            android:textColor="@color/graytext"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="付款方式"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:paddingRight="10dp"
            android:layout_weight="7"
            android:text="余额  ￥100.00"
            android:textColor="@color/graytext"
            android:textSize="14sp" />

    </LinearLayout>
     <View 
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="16sp"
            android:text="付款金额"/>

        <TextView
            android:id="@+id/order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="right|center_vertical"
            android:text="49.85元"
            android:textSize="14sp" />

    </LinearLayout>
    <ImageView 
        android:id="@+id/pay_bt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        android:src="@drawable/confir_pay_bt"/>

</LinearLayout>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/mywallet_show"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_textSize_small" />
</RelativeLayout>