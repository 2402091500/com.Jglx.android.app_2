<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.jglx.android.app.ui.Fuwu_SuifeiActivity"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
      <RelativeLayout 
          android:layout_width="fill_parent"
        android:layout_height="wrap_content">
          
    <EditText
        android:id="@+id/fuwu_huafei_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/fuwu_huafei_et"
        android:paddingLeft="10dp"
        android:maxLength="11"
        android:paddingRight="10dp" />
    <TextView 
        android:id="@+id/logoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="19dp"
        android:paddingRight="20dp"
         android:drawableRight="@drawable/fuwu_huafei_etright"
         android:layout_alignParentRight="true"/>
      </RelativeLayout>  
    </FrameLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
            <TextView
                android:id="@+id/wuyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_5"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/siyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_10"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/ersiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_20"
                android:gravity="center"
                />

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            
            <TextView
                android:id="@+id/sansiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_30"
                android:gravity="center"
                 />
            <TextView
                android:id="@+id/wusiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_50"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/yibaiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_100"
                android:gravity="center"
                />

            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tmd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sanbaiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_300"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/wubaiyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/y_500"
                android:gravity="center"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/huafei_radiobutton"
                android:gravity="center"
                android:hint="30元"
                android:visibility="invisible" />
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/huafei_fuwusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:textColor="@color/graytext"
            android:drawableLeft="@drawable/huafei_fuwusan"
            android:text="中国移动"
            />
        <TextView
            android:id="@+id/huafei_huafeizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="right|bottom"
            android:textColor="@color/green"
            android:text="售价：49.85"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/pay_bt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:enabled="false"
        android:text="立即充值"
        android:textColor="@color/white"
        android:background="@drawable/huafei_button"/>

</LinearLayout>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/mywallet_show"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_textSize_small" />
</RelativeLayout>