<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_line_top_bottom"
    android:paddingBottom="@dimen/all_magrin"
    android:paddingLeft="@dimen/all_magrin"
    android:paddingTop="@dimen/all_magrin" >

    <com.example.com.jglx.android.app.view.CircleImageView
        android:id="@+id/item_addFriend_iconIv"
        android:layout_width="@dimen/icon_height_width"
        android:layout_height="@dimen/icon_height_width"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/all_magrin"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_height_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_toRightOf="@+id/item_addFriend_iconIv"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_addFriend_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="娜娜"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="请求添加你为好友"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_addFriend_addTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/all_magrin"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:padding="@dimen/all_padding"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="@dimen/text_textSize" />

</RelativeLayout>