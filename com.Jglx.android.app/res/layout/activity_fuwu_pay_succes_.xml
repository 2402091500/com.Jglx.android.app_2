<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.com.jglx.android.app.ui.Fuwu_pay_succes_Activity"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
     >
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pay_success"
        android:text="支付成功"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="@color/bg"
        />
    <TextView 
        android:id="@+id/number"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="￥8.88"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
       android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="商  品 "
            android:textColor="@color/graytext"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/good_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="right"
            android:text="18725773513充值30元"
            android:textColor="@color/graytext"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="交易时间"
            android:textColor="@color/graytext"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="right"
            android:text="2015-11-13  11：45"
            android:textColor="@color/graytext"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="支付方式"
            android:textColor="@color/graytext"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/way"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="right"
            android:text="支付宝"
            android:textColor="@color/graytext"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/mywallet_show"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_textSize_small" />
</RelativeLayout>
