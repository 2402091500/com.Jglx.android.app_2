<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_marginRight="@dimen/all_magrin"
            android:src="@drawable/login_name" />

        <EditText
            android:id="@+id/register1_phoneEdt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号码"
            android:textSize="@dimen/text_textSize" />
    </LinearLayout>

    <Button
        android:id="@+id/register1_nexBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_margin="30dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>