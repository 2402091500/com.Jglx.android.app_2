<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.example.com.jglx.android.app.ui.MySheZhiActivity" >

    <TextView
        android:id="@+id/s_LL_yonhufank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@drawable/bg_line_top_bottom"
        android:drawableRight="@drawable/my_imag_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin"
        android:text="用户反馈" />

    <RelativeLayout
        android:id="@+id/s_LL_anquansezi"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_line_top_bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/s_tv_anquansezi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/all_magrin"
            android:text="安全设置" />

        <TextView
            android:id="@+id/s_tv_anquansezi_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_magrin"
            android:drawableLeft="@drawable/s_tv_anquansezi_right"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/my_imag_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/s_LL_qincufancun"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/s_tv_qincufancun"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/all_magrin"
            android:text="清除缓存" />

        <TextView
            android:id="@+id/s_tv_qincufancun_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_magrin"
            android:drawablePadding="@dimen/all_magrin"
            android:drawableRight="@drawable/my_imag_right"
            android:gravity="center" />
    </RelativeLayout>
    <View style="@style/divider_horizontal"/>
    <RelativeLayout
        android:id="@+id/s_LL_update"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/s_LL_update_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/all_magrin"
            android:text="检查新版本" />

        <TextView
            android:id="@+id/s_LL_update_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/all_magrin"
            android:drawablePadding="@dimen/all_magrin"
            android:drawableRight="@drawable/my_imag_right"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:id="@+id/s_LL_yonhuxiyi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@drawable/bg_line_top_bottom"
        android:drawableRight="@drawable/my_imag_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin"
        android:text="用户协议" />

    <TextView
        android:id="@+id/s_LL_guanyuwomen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_line_top_bottom"
        android:drawableRight="@drawable/my_imag_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin"
        android:text="关于我们" />

    <TextView
        android:id="@+id/s_LL_tuicun"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@drawable/bg_line_top_bottom"
        android:gravity="center"
        android:text="退出" />

</LinearLayout>