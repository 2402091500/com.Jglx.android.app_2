<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_myfriend_catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="A"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize_big"
        android:textStyle="bold" />

    <View style="@style/divider_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_magrin" >

        <com.example.com.jglx.android.app.view.CircleImageView
            android:id="@+id/item_myfriend_iconIv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_myfriend_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_toRightOf="@+id/item_myfriend_iconIv"
            android:gravity="center"
            android:textSize="@dimen/text_textSize" />

        <ImageView
            android:id="@+id/item_myfriend_addIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/myfriend_add"
            android:padding="@dimen/all_padding" />
    </RelativeLayout>

</LinearLayout>