<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.example.com.jglx.android.app.ui.Fuwu_jiaotongActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fuwu_sf_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_magrin"
            android:gravity="center"
            android:text="缴费单位"
            android:textSize="@dimen/text_textSize" />

        <TextView
            android:id="@+id/fuwu_sf_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_marginRight="@dimen/all_magrin"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/all_right"
            android:hint="重庆二次供水公司"
            android:background="@null"
            android:textSize="@dimen/text_textSize" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fuwu_sf_tv_kahao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_magrin"
            android:gravity="center"
            android:text="水卡卡号"
            android:textSize="@dimen/text_textSize" />

        <EditText
            android:id="@+id/fuwu_sf_et_kahao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:background="@null"
            android:textSize="@dimen/text_textSize" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        
     <TextView
            android:id="@+id/fuwu_sf_tvtisi"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/all_magrin"
            android:gravity="left"
            android:text="水卡卡号查看纸质账单"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ranqifei_i"
            android:textSize="@dimen/text_textSize" />
     <TextView 
         android:id="@+id/sdq_money"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_weight="1"
          android:layout_margin="20dp"
          android:layout_marginLeft="@dimen/all_magrin"
            android:gravity="left"
            android:textColor="@color/green"
            android:visibility="invisible"
         android:text="258元"
         />
    </LinearLayout>

    <Button
        android:id="@+id/fuwu_sf_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectangle_green"
        android:gravity="center"
        android:text="查询"
        android:textColor="@color/bg"
        android:textSize="@dimen/text_textSize" />
</LinearLayout>
