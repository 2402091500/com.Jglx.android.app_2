<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_top_bottom"
            android:paddingLeft="@dimen/all_magrin" >

            <com.example.com.jglx.android.app.view.RGridView
                android:id="@+id/groupDetail_memberGv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/all_magrin"
                android:layout_marginTop="@dimen/all_magrin"
                android:horizontalSpacing="10dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_line_top_bottom"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginLeft="@dimen/all_magrin" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="小区名称"
                    android:textSize="@dimen/text_textSize" />

                <TextView
                    android:id="@+id/groupDetail_groupNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingRight="@dimen/all_padding"
                    android:text="小区名称"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_textSize" />
            </RelativeLayout>

            <View style="@style/divider_horizontal" />

            <TextView
                android:id="@+id/groupDetail_groupEWMTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginLeft="@dimen/all_magrin"
                android:gravity="center_vertical|left"
                android:text="小区二维码"
                android:textSize="@dimen/text_textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/all_magrin"
                    android:gravity="center"
                    android:text="消息免打扰"
                    android:textSize="@dimen/text_textSize" />

                <ImageView
                    android:id="@+id/groupDetail_isNoticeIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/all_magrin"
                    android:src="@drawable/guan" />
            </RelativeLayout>

            <TextView
                android:id="@+id/groupDetail_managerTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:background="@drawable/bg_line_top_bottom"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/all_magrin"
                android:text="申请为群管理员"
                android:textSize="@dimen/text_textSize" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>