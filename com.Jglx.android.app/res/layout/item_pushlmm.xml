<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/item_pushlmm_showTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_marginTop="@dimen/all_magrin"
        android:text="新的朋友"
        android:textColor="@color/graytext"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/all_magrin"
        android:paddingTop="@dimen/all_magrin" >

        <com.example.com.jglx.android.app.view.CircleImageView
            android:id="@+id/item_pushlmm_iconIv"
            android:layout_width="@dimen/icon_height_width_middle"
            android:layout_height="@dimen/icon_height_width_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_magrin"
            android:src="@drawable/default_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/all_magrin"
            android:layout_toRightOf="@+id/item_pushlmm_iconIv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_pushlmm_titleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="林么么"
                android:textSize="@dimen/text_textSize_big" />

            <TextView
                android:id="@+id/item_pushlmm_contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="请求加您为好友 "
                android:textColor="@color/graytext"
                android:textSize="@dimen/text_textSize_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_pushlmm_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/all_magrin"
            android:gravity="center"
            android:text="上午 10:00"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_small" />

        <ImageView
            android:id="@+id/item_pushlmm_deleteIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/item_pushlmm_timeTv"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_push_delete_n"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="5dp" />

</LinearLayout>