<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/all_magrin"
        android:text="个人详情"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize_big" />

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="昵称"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:id="@+id/myfragment_zhuye_nameTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_textSize_big" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="生日"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:id="@+id/myfragment_zhuye_birthTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_textSize_big" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="认证所在地"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:id="@+id/myfragment_zhuye_placeTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_textSize_big" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/all_magrin"
        android:paddingRight="@dimen/all_magrin" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="个性签名"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize_big" />

        <TextView
            android:id="@+id/myfragment_zhuye_signTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_textSize_big" />
    </LinearLayout>

</LinearLayout>