<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.com.jglx.android.app.ui.MySheZhi_yonhuActivity" >

    <EditText
        android:id="@+id/my_shezhi_yonhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_white_coner"
        android:textSize="@dimen/text_textSize"
        android:gravity="top|left"
        android:padding="10dp"
        android:minHeight="200dp" />

    <TextView
        android:id="@+id/my_shezhi_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_shezhi_yonhu"
        android:layout_marginTop="@dimen/all_magrin"
        android:paddingTop="5dp"
        android:text="@string/my_shezhi_text"
        android:textColor="@color/graytext"
        android:textSize="@dimen/text_textSize_small" />

</RelativeLayout>