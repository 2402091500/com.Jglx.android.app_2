<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <View
        android:id="@+id/popW_msg_bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/pop_msg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/popW_msg_goodFTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/pop_msg_icon"
                android:drawablePadding="@dimen/all_padding"
                android:gravity="center"
                android:padding="20dp"
                android:text="我的好友"
                android:textColor="@color/white"
                android:textSize="@dimen/text_textSize_big" />

            <View style="@style/divider_horizontal" />

            <TextView
                android:id="@+id/popW_msg_linFTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/pop_msg_icon"
                android:drawablePadding="@dimen/all_padding"
                android:gravity="center"
                android:padding="15dp"
                android:text="我的邻友"
                android:textColor="@color/white"
                android:textSize="@dimen/text_textSize_big" />

            <View style="@style/divider_horizontal" />

            <TextView
                android:id="@+id/popW_msg_saoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-10dp"
                android:drawableLeft="@drawable/pop_msg_ewm"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="@dimen/text_textSize_big" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>