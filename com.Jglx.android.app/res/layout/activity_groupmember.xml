<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.example.com.jglx.android.app.view.RGridView
            android:id="@+id/groupMember_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:listSelector="#00000000"
            android:numColumns="4"
            android:paddingBottom="@dimen/all_magrin"
            android:paddingLeft="@dimen/all_magrin"
            android:paddingTop="@dimen/all_magrin"
            android:scrollbars="none"
            android:verticalSpacing="15dp" />

        <Button
            android:id="@+id/groupMember_gagBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:text="确定禁言"
            android:textColor="@color/white"
            android:textSize="@dimen/text_textSize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/groupMember_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:layout_marginTop="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/all_magrin"
            android:text="已被禁言的成员:"
            android:textColor="@color/graytext"
            android:textSize="@dimen/text_textSize"
            android:visibility="gone" />

        <com.example.com.jglx.android.app.view.RGridView
            android:id="@+id/groupMember_gagedGv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:listSelector="#00000000"
            android:numColumns="4"
            android:paddingBottom="@dimen/all_magrin"
            android:paddingLeft="@dimen/all_magrin"
            android:paddingTop="@dimen/all_magrin"
            android:scrollbars="none"
            android:verticalSpacing="15dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/groupMember_gagCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_green"
            android:gravity="center"
            android:text="取消禁言"
            android:textColor="@color/white"
            android:textSize="@dimen/text_textSize"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>