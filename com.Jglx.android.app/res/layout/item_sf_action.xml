<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
          android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
          android:layout_marginTop="10dp"
          android:background="@color/white"
        android:layout_margin="@dimen/all_magrin" >

        <com.example.com.jglx.android.app.view.RetangleImageView
            android:id="@+id/item_sf_actionIv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_img_big" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_white"
            android:padding="3dp" >

            <com.example.com.jglx.android.app.view.CircleImageView
                android:id="@+id/item_sf_actionLogoIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/default_head" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_sf_actionTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/all_magrin"
        android:layout_marginLeft="@dimen/all_magrin"
        android:layout_marginRight="@dimen/all_magrin"
        android:gravity="center"
        android:text="夏日放假充实惠前100名85折"
        android:textSize="@dimen/text_textSize" />
</LinearLayout>