<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_magrin"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/all_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_invateAction_titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:textSize="@dimen/text_textSize" />

            <TextView
                android:id="@+id/item_invateAction_contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="推广"
                android:textColor="@color/green"
                android:textSize="@dimen/text_textSize_small" />
        </RelativeLayout>

        <com.example.com.jglx.android.app.view.RetangleImageView
            android:id="@+id/item_invateAction_Iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_magrin"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_img_big" />

        <WebView
            android:id="@+id/item_invateAction_webView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/all_magrin"
            android:layerType="hardware"            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>